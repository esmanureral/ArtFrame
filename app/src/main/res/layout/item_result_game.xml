<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/result_game_width"
        android:layout_height="@dimen/result_game_height"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/artwork_border_game"
        app:strokeWidth="@dimen/card_corner_radius">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imgArtworkWon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>