<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_8dp"
    android:background="@drawable/artwork_border">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/result_game_width"
        android:layout_height="@dimen/result_game_height"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imgArtworkWon"
            android:layout_width="@dimen/result_game_width"
            android:layout_height="@dimen/result_game_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

</FrameLayout>