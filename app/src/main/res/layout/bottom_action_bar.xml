<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iconShare"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:contentDescription="@string/share"
        android:src="@drawable/share"
        app:layout_constraintEnd_toStartOf="@id/iconFavorite"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:textSize="@dimen/item_year_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iconShare"
        app:layout_constraintStart_toStartOf="@id/iconShare"
        app:layout_constraintTop_toBottomOf="@id/iconShare" />

    <ImageView
        android:id="@+id/iconFavorite"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:contentDescription="@string/favorite"
        android:src="@drawable/favorite_border"
        app:layout_constraintEnd_toStartOf="@id/iconDownload"
        app:layout_constraintStart_toEndOf="@id/iconShare"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite"
        android:textSize="@dimen/item_year_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iconFavorite"
        app:layout_constraintStart_toStartOf="@id/iconFavorite"
        app:layout_constraintTop_toBottomOf="@id/iconFavorite" />

    <ImageView
        android:id="@+id/iconDownload"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:contentDescription="@string/download"
        android:src="@drawable/download"
        app:layout_constraintEnd_toStartOf="@id/iconWallpaper"
        app:layout_constraintStart_toEndOf="@id/iconFavorite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download"
        android:textSize="@dimen/item_year_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iconDownload"
        app:layout_constraintStart_toStartOf="@id/iconDownload"
        app:layout_constraintTop_toBottomOf="@id/iconDownload" />

    <ImageView
        android:id="@+id/iconWallpaper"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:contentDescription="@string/wallpaper"
        android:src="@drawable/wallpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconDownload"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallpaper"
        android:textSize="@dimen/item_year_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iconWallpaper"
        app:layout_constraintStart_toStartOf="@id/iconWallpaper"
        app:layout_constraintTop_toBottomOf="@id/iconWallpaper" />

</androidx.constraintlayout.widget.ConstraintLayout>
