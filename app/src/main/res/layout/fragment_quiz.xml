<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        app:cardCornerRadius="@dimen/iv_favorite_margin"
        app:cardElevation="@dimen/space_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="@dimen/stroke_width">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp">

            <TextView
                android:id="@+id/tv_question_number"
                style="@style/TvDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_question"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_score"
                style="@style/TvDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/iv_favorite_margin"
                android:text="@string/tv_score"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_correct_answers"
                app:layout_constraintStart_toEndOf="@id/tv_question_number"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_correct_answers"
                style="@style/TvDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correct_answer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_8dp"
        android:layout_marginTop="@dimen/iv_favorite_margin"
        android:layout_marginBottom="@dimen/iv_favorite_margin"
        android:contentDescription="@string/artwork_header"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/btnOption1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_top" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="@dimen/progress_indicator_size"
        android:layout_height="@dimen/progress_indicator_size"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="visible"
        app:indicatorColor="@color/progress_indicator_color"
        app:layout_constraintBottom_toBottomOf="@id/ivArtwork"
        app:layout_constraintEnd_toEndOf="@id/ivArtwork"
        app:layout_constraintStart_toStartOf="@id/ivArtwork"
        app:layout_constraintTop_toTopOf="@id/ivArtwork" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption1"
        style="@style/OptionButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/option_height"
        android:layout_marginTop="@dimen/padding_8dp"
        app:cornerRadius="@dimen/iv_favorite_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivArtwork"
        tools:text="@string/artists_header" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption2"
        style="@style/OptionButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/option_height"
        android:layout_marginTop="@dimen/padding_8dp"
        app:cornerRadius="@dimen/iv_favorite_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOption1"
        tools:text="@string/artists_header" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption3"
        style="@style/OptionButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/option_height"
        android:layout_marginTop="@dimen/padding_8dp"
        android:paddingVertical="@dimen/iv_favorite_margin"
        app:cornerRadius="@dimen/iv_favorite_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOption2"
        tools:text="@string/artists_header" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_question"
        style="@style/OptionButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/option_height"
        android:layout_marginTop="@dimen/padding_32dp"
        android:layout_marginBottom="@dimen/iv_favorite_margin"
        android:backgroundTint="@color/button_next_color"
        android:text="@string/btn_next_question"
        android:textColor="@color/primary"
        app:cornerRadius="@dimen/iv_favorite_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOption3" />

</androidx.constraintlayout.widget.ConstraintLayout>
