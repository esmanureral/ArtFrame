<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/toolbar_elevation"
        android:padding="@dimen/toolbar_padding"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivArrowLeft"
            android:layout_width="@dimen/iv_favorite_width"
            android:layout_height="@dimen/iv_favorite_width"
            android:contentDescription="@string/iv_arrow_left_descr"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="@dimen/iv_favorite_width"
            android:layout_height="@dimen/iv_favorite_width"
            android:layout_gravity="end"
            android:contentDescription="@string/iv_arrow_left_descr"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/favorite_border" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="@dimen/iv_favorite_width"
            android:layout_height="@dimen/iv_favorite_width"
            android:layout_gravity="end"
            android:contentDescription="@string/iv_arrow_left_descr"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/share" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:background="@color/onPrimary"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:fitsSystemWindows="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:id="@+id/ivArtwork"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/iv_arrow_left_descr"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        app:layout_collapseMode="parallax" />
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/nested_scroll_view_margin_top"
                android:background="@drawable/scroll_bg"
                android:clipToPadding="false"
                android:padding="@dimen/iv_favorite_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/TvDetailStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Kedi ile Çocuk " />

                    <TextView
                        android:id="@+id/tvArtistLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_32dp"
                        android:text="@string/artist_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                    <TextView
                        android:id="@+id/tvArtistTitle"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvArtistLabel"
                        tools:text="Henri Matisse" />

                    <TextView
                        android:id="@+id/tvArtistDisplay"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toStartOf="@id/ivArtistIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvArtistTitle"
                        tools:text="French,1869-1954" />

                    <ImageView
                        android:id="@+id/ivArtistIcon"
                        android:layout_width="@dimen/padding_32dp"
                        android:layout_height="@dimen/padding_32dp"
                        android:contentDescription="@string/artist_label"
                        android:src="@drawable/arrow_right"
                        app:layout_constraintBottom_toBottomOf="@id/tvArtistTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvArtistTitle" />

                    <View
                        android:id="@+id/dividerArtist"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/divider_height"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:background="@color/divider_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvArtistDisplay" />

                    <TextView
                        android:id="@+id/tvDateLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_32dp"
                        android:text="@string/tv_date_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvArtistDisplay" />

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintStart_toStartOf="@id/tvDateLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
                        tools:text="1908" />

                    <TextView
                        android:id="@+id/tvPlaceOriginLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_64dp"
                        android:text="@string/place_of_origin"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toEndOf="@id/tvDateLabel"
                        app:layout_constraintTop_toTopOf="@id/tvDateLabel" />

                    <TextView
                        android:id="@+id/tvPlaceOrigin"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintStart_toStartOf="@id/tvPlaceOriginLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvPlaceOriginLabel"
                        tools:text="France" />

                    <TextView
                        android:id="@+id/tvMediumLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:text="@string/tv_medium_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPlaceOrigin" />

                    <TextView
                        android:id="@+id/tvMedium"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#000000"
                        android:textSize="@dimen/item_year_text_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvMediumLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvMediumLabel"
                        tools:text="Oil on canvas" />

                    <TextView
                        android:id="@+id/tvDimensionsLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:text="@string/tv_dimension_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMedium" />

                    <TextView
                        android:id="@+id/tvDimensions"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvDimensionsLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvDimensionsLabel"
                        tools:text="91.8 × 150.2 cm" />

                    <TextView
                        android:id="@+id/tvCreditLineLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:text="@string/tv_credit_line_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDimensions" />

                    <TextView
                        android:id="@+id/tvCreditLine"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvCreditLineLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvCreditLineLabel"
                        tools:text="Mr. and Mrs. Lewis Larned Coburn Memorial Collection" />

                    <View
                        android:id="@+id/dividerDescription"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/divider_height"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:background="@color/divider_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCreditLine" />

                    <TextView
                        android:id="@+id/tvDescriptionLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_32dp"
                        android:text="@string/description_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCreditLine" />

                    <TextView
                        android:id="@+id/tvDescription"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_8dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:singleLine="false"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toStartOf="@id/ivDescriptionIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel"
                        tools:text="Description" />

                    <ImageView
                        android:id="@+id/ivDescriptionIcon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:contentDescription="@string/description_icon"
                        android:src="@drawable/arrow_down"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvDescriptionLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>