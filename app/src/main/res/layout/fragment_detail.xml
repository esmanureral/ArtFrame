<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/space_4dp"
        android:padding="@dimen/space_4dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivArrowLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/iv_arrow_left_descr"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/arrow_left" />

        <TextView
            style="@style/ToolbarTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_title_margin_start"
            android:text="@string/artworks_detail" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/onPrimary"
        android:paddingBottom="@dimen/padding_40dp"
        android:translationZ="@dimen/translation_1"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="@dimen/translation_1">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:fitsSystemWindows="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:id="@+id/ivArtwork"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/iv_arrow_left_descr"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        app:layout_collapseMode="parallax" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/nested_scroll_view_margin_top"
                android:background="@drawable/scroll_bg"
                android:clipToPadding="false"
                android:elevation="@dimen/space_4dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/tvTitleDetailStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/iv_favorite_margin"
                        android:layout_marginTop="@dimen/shimmer_height"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:singleLine="false"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Kedi ile Çocuk " />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/artistContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle">

                        <TextView
                            android:id="@+id/tvArtistLabel"
                            style="@style/TvDetailLabelStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/iv_favorite_margin"
                            android:layout_marginTop="@dimen/padding_32dp"
                            android:text="@string/artist_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvArtistDisplay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/iv_favorite_margin"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toStartOf="@id/ivArtistIcon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvArtistLabel"
                            tools:text="French,1869-1954" />

                        <ImageView
                            android:id="@+id/ivArtistIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/iv_favorite_margin"
                            android:layout_marginBottom="@dimen/iv_favorite_margin"
                            android:contentDescription="@string/artist_label"
                            android:src="@drawable/arrow_right"
                            app:layout_constraintBottom_toBottomOf="@id/tvArtistDisplay"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvArtistDisplay" />

                        <View
                            android:id="@+id/dividerArtist"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/divider_height"
                            android:layout_marginTop="@dimen/iv_favorite_margin"
                            android:background="@color/divider_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvArtistDisplay" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvDateLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/iv_favorite_margin"
                        android:layout_marginTop="@dimen/padding_32dp"
                        android:text="@string/tv_date_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/artistContainer" />

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:singleLine="false"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toStartOf="@id/tvPlaceOriginLabel"
                        app:layout_constraintStart_toStartOf="@id/tvDateLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
                        tools:text="1908" />

                    <TextView
                        android:id="@+id/tvPlaceOriginLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_64dp"
                        android:text="@string/place_of_origin"
                        app:layout_constraintStart_toEndOf="@id/tvDateLabel"
                        app:layout_constraintTop_toTopOf="@id/tvDateLabel" />

                    <TextView
                        android:id="@+id/tvPlaceOrigin"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:singleLine="false"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toEndOf="@id/tvPlaceOriginLabel"
                        app:layout_constraintStart_toStartOf="@id/tvPlaceOriginLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvPlaceOriginLabel"
                        tools:text="France" />

                    <TextView
                        android:id="@+id/tvMediumLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/iv_favorite_margin"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:text="@string/tv_medium_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPlaceOrigin" />

                    <TextView
                        android:id="@+id/tvMedium"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvMediumLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvMediumLabel"
                        tools:text="Oil on canvas" />

                    <TextView
                        android:id="@+id/tvDimensionsLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/iv_favorite_margin"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:text="@string/tv_dimension_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMedium" />

                    <TextView
                        android:id="@+id/tvDimensions"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvDimensionsLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvDimensionsLabel"
                        tools:text="91.8 × 150.2 cm" />

                    <TextView
                        android:id="@+id/tvCreditLineLabel"
                        style="@style/TvDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/iv_favorite_margin"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:text="@string/tv_credit_line_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDimensions" />

                    <TextView
                        android:id="@+id/tvCreditLine"
                        style="@style/TvDetailTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_year_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvCreditLineLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvCreditLineLabel"
                        tools:text="Mr. and Mrs. Lewis Larned Coburn Memorial Collection" />

                    <View
                        android:id="@+id/dividerDescription"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/divider_height"
                        android:layout_marginTop="@dimen/iv_favorite_margin"
                        android:background="@color/divider_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCreditLine" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/descriptionContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerDescription">

                        <TextView
                            android:id="@+id/tvDescriptionLabel"
                            style="@style/TvDetailLabelStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/iv_favorite_margin"
                            android:layout_marginTop="@dimen/padding_32dp"
                            android:text="@string/description_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDescription"
                            style="@style/TvDetailTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/iv_favorite_margin"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:scrollHorizontally="false"
                            android:singleLine="false"
                            android:textSize="@dimen/item_year_text_size"
                            app:layout_constraintEnd_toStartOf="@id/ivDescriptionIcon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel"
                            tools:text="Description" />

                        <ImageView
                            android:id="@+id/ivDescriptionIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/iv_favorite_margin"
                            android:contentDescription="@string/description_icon"
                            android:src="@drawable/arrow_down"
                            app:layout_constraintBottom_toBottomOf="@id/tvDescriptionLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvDescriptionLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/bottomActionBar"
        layout="@layout/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/translation_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>