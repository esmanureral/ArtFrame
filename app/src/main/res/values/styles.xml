<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitleText">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:fontFamily">@font/playfair_display</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/header_padding</item>
    </style>

    <style name="ViewArtistIndicator">
        <item name="android:background">@color/onPrimary</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ArtistTitleText">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">@dimen/artist_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemArtistTitleText">
        <item name="android:textSize">@dimen/item_artist_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="ItemYearsTitleText">
        <item name="android:textSize">@dimen/item_year_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/surface</item>
    </style>

    <style name="TvTitle">
        <item name="android:textSize">@dimen/tv_title_text_size</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/playfair_semibold</item>
    </style>

    <style name="TvDetailStyle">
        <item name="android:textSize">@dimen/tv_title_text_size</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvDetailLabelStyle">
        <item name="android:textSize">@dimen/item_year_text_size</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvDetailTextStyle">
        <item name="android:textSize">@dimen/item_artist_text_size</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>